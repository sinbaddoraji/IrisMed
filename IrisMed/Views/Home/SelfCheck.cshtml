@{
}

@model IrisMed.Models.SelfCheck

@{
    ViewData["Title"] = "Self Check";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="form_sect">
    <h1>Smart Diagnosis (Prototype)</h1>
    <h4>A tool that diagnoses a patient using AI</h4>
    <p>Input the symptoms you are expirencing seperated by a comma (",")</p>
        <form asp-action="SelfCheck">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Symptoms" class="control-label"></label>
                <input asp-for="Symptoms" class="form-control"></input>
                <span asp-validation-for="Symptoms" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Check" class="btn btn-primary" />
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

